@model Content

@{
    if (!string.IsNullOrWhiteSpace(Model.Summary))
    {
        ViewBag.Description = Markdown
            .ToPlainText(Model.Summary);
    }
}

@section Admin
{
    @if (@User.Identity.IsAuthenticated)
    {
        <div class="admin-action">
            <a
                asp-action="Edit"
                asp-controller="Content"
                asp-route-path="@Model.Path">
                Edit content
            </a>
        </div>
    }
}

<div class="container">
    <div class="content-detail">
        @if (!string.IsNullOrWhiteSpace(Model.Name))
        {
            <h1>
                <a
                    asp-action="Detail"
                    asp-controller="Content"
                    asp-route-path="@Model.Path">
                    @Model.Name
                </a>
            </h1>
        }
        @if (Model.IsIndexed)
        {
            <time>
                @Model.PublishedDateTime.GetValueOrDefault().ToString("yyyy-MM-dd")
            </time>
        }
        @Html.Raw(Markdown.ToHtml(Model.Summary))
        @Html.Raw(Markdown.ToHtml(Model.Body))
    </div>
</div>