@model Content

@{
    if (!string.IsNullOrWhiteSpace(Model.Summary))
    {
        ViewBag.Description = Markdown
            .ToPlainText(Model.Summary);
    }
}

<div class="container">
    <h1>
        Delete content
    </h1>
    <form asp-action="Delete" asp-controller="Content" method="post">
        <div class="edit-split">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled>
        </div>
        <div class="edit-split">
            <label asp-for="Path"></label>
            <input asp-for="Path" disabled>
        </div>
        <div class="edit-split">
            <label asp-for="IsIndexed">Indexed</label>
            <span><input asp-for="IsIndexed" disabled></span>
        </div>
        <div class="edit-split">
            <label asp-for="PublishedDateTime">Published</label>
            <input asp-for="PublishedDateTime" disabled>
        </div>
        <div class="edit-stack">
            <label asp-for="Summary"></label>
            <textarea asp-for="Summary" disabled></textarea>
        </div>
        <div class="edit-stack">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="large" disabled></textarea>
        </div>
        <div class="edit-buttons-right">
            <input type="submit" value="Delete">
            <div>
                <a
                    asp-action="Edit"
                    asp-controller="Content"
                    asp-route-path="@Model.Path">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>