@model Content

<div class="container">
    <form asp-action="Add" asp-controller="Content" method="post">
        <div asp-validation-summary="All"></div>
        <div class="edit-split">
            <label asp-for="Name"></label>
            <input asp-for="Name"></label>
        </div>
        <div class="edit-split">
            <label asp-for="Path"></label>
            <input asp-for="Path" required></label>
        </div>
        <div class="edit-split">
            <label asp-for="IsIndexed">Indexed</label>
            <span><input asp-for="IsIndexed"></label></span>
        </div>
        <div class="edit-split">
            <label asp-for="PublishedDateTime">Published</label>
            <input asp-for="PublishedDateTime" required></label>
        </div>
        <div class="edit-stack">
            <label asp-for="Summary"></label>
            <textarea asp-for="Summary" required></textarea>
        </div>
        <div class="edit-stack">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="large" required></textarea>
        </div>
        <div class="edit-buttons">
            <input type="submit" value="Add">
            <div>
                <a asp-action="Index" asp-controller="Content">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>